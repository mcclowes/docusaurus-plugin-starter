{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2019",
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": ["src", "ambient.d.ts"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*", "examples"]
}
